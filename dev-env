#/bin/bash -e

RELAYER_DIR="$GOPATH/src/github.com/cosmos/relayer"
RELAYER_CONF="$HOME/.relayer"
GAIA_CONF="$(pwd)/data"

# Ensure user understands what will be deleted
if ([[ -d $RELAYER_CONF ]] || [[ -d $GAIA_CONF ]]) && [[ ! "$1" == "skip" ]]; then
  read -p "$0 will delete \$HOME/.relayer and \$(pwd)/data folder. Do you wish to continue? (y/n): " -n 1 -r
  echo
  if [[ ! $REPLY =~ ^[Yy]$ ]]; then
      exit 1
  fi
fi

cd $RELAYER_DIR
rm -rf $RELAYER_CONF &> /dev/null
bash scripts/two-chainz "skip"

echo "waiting for blocks..."
sleep 3

rly tx link demo -d -o 3s
rly tx txf ibc-0 ibc-1 100000samoleans $(rly ch addr ibc-1)
rly tx txf ibc-1 ibc-0 100000samoleans $(rly ch addr ibc-0)
sleep 1
rly tx relay demo -d
sleep 1
rly tx acks demo -d
